<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:padding="5dp"
        android:text="Username"/>
    <EditText
        android:id="@+id/username"
        app:layout_constraintLeft_toRightOf="@id/textUsername"
        app:layout_constraintTop_toTopOf="@id/textUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:textSize="25dp"
        android:hint="name"
        android:textColor="@color/gray"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/textUsername"
        app:layout_constraintTop_toBottomOf="@+id/textUsername"
        android:layout_marginTop="20dp"
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:padding="5dp"
        android:text="Password"/>
    <EditText
        android:id="@+id/password"
        app:layout_constraintLeft_toRightOf="@id/textPassword"
        app:layout_constraintTop_toTopOf="@id/textPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:textSize="25dp"
        android:hint="password"
        android:textColor="@color/gray"/>
    <Button
        android:id="@+id/buttonLogin"
        android:text="Login"
        app:layout_constraintLeft_toLeftOf="@id/textPassword"
        app:layout_constraintTop_toBottomOf="@id/textPassword"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>