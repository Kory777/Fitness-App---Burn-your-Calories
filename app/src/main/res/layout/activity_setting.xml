<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/basic_info"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/portrait"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:riv_border_color="#333333"
            app:riv_border_width="2dp"
            android:src="@drawable/dog"
            app:riv_oval="true"
            />
        <ImageButton
            android:id="@+id/refresh"
            app:layout_constraintLeft_toRightOf="@+id/portrait"
            app:layout_constraintTop_toTopOf="@id/portrait"
            android:background="@drawable/refresh"
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/accountName"
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/portrait"
            app:layout_constraintTop_toTopOf="@id/portrait"/>


    </android.support.constraint.ConstraintLayout>
    <include
        android:id="@+id/plan"
        android:layout_height="165dp"
        android:layout_marginTop="15dp"
        android:layout_width="190dp"
        android:layout_marginLeft="10dp"
        layout="@layout/display_card_plan"
        app:layout_constraintTop_toBottomOf="@id/basic_info"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <include
        android:id="@+id/bodyData"
        layout="@layout/display_card_body"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/plan"
        app:layout_constraintTop_toTopOf="@id/plan"
        android:layout_height="165dp"
        android:layout_width="190dp" />

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/bodyData"
        android:layout_marginTop="20dp"
        android:id="@+id/account"
        android:hint="Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@+id/account"
        android:layout_marginTop="20dp"
        android:hint="password"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        app:layout_constraintTop_toBottomOf="@id/password"
        android:id="@+id/create_account"
        android:text="create account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>